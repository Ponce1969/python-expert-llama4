# Configuración de API de Groq
GROQ_API_KEY=tu_api_key_aquí

# Configuración de PostgreSQL
DATABASE_URL=postgresql://chatuser:chatpass@localhost:5432/chatdb
# Parámetros de PostgreSQL individuales
DB_USER=chatuser
DB_PASSWORD=chatpass
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatdb
SQL_ECHO=False

# Configuración del modelo
DEFAULT_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
DEFAULT_TEMPERATURE=0.3
DEFAULT_MAX_TOKENS=8192  # Máximo soportado por el modelo
SHOW_USAGE=true
# Nota: Este modelo tiene una ventana de contexto de 131,072 tokens

# Configuración de exportación
EXPORT_DIR=exports
EXPORT_FORMAT=md,pdf  # Formatos separados por comas: md,pdf

# Configuración de streaming
CHUNK_SIZE=30  # Número de palabras por chunk
PAUSE_THRESHOLD=1000  # Caracteres antes de pausar y pedir confirmación
